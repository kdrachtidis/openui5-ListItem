<mvc:View controllerName="DemoUXapp.controller.MainNavigation.MainView" 
  height="100%" 
  xmlns:l="sap.ui.layout" 
  xmlns:mvc="sap.ui.core.mvc" 
  xmlns="sap.m">

  <Page showHeader="false">
    <content>

      <l:BlockLayout background="Dashboard">
        <l:BlockLayoutRow>

          <l:BlockLayoutCell title="Running scenarios">
            <mvc:XMLView viewName="DemoUXapp.view.MainNavigation.ListView.Scenarios.Example5-CustomListGrid" />
          </l:BlockLayoutCell>

        </l:BlockLayoutRow>
        <l:BlockLayoutRow>

          <l:BlockLayoutCell title="Completed tasks">
            <mvc:XMLView viewName="DemoUXapp.view.MainNavigation.ListView.Tasks.CompletedTasks.Example5-CustomListGrid" />
          </l:BlockLayoutCell>

          <l:BlockLayoutCell title="Pending tasks">
            <mvc:XMLView viewName="DemoUXapp.view.MainNavigation.ListView.Tasks.PendingTasks.Example5-CustomListGrid" />
          </l:BlockLayoutCell>

        </l:BlockLayoutRow>
      </l:BlockLayout>

    </content>
  </Page>

</mvc:View>