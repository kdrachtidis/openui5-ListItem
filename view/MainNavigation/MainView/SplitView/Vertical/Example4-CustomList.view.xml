<mvc:View controllerName="DemoUXapp.controller.MainNavigation.MainView" 
  xmlns:l="sap.ui.layout" 
  xmlns:mvc="sap.ui.core.mvc" 
  xmlns:m="sap.m">

  <m:Page showHeader="true" 
    title="{i18n>appTitle}">

    <m:content>
      <l:ResponsiveSplitter defaultPane="default">

        <l:PaneContainer orientation="Horizontal">

          <l:PaneContainer orientation="Vertical">

            <l:SplitPane id="default">
              <m:Panel headerText="Running scenarios" 
                height="100%">
                <mvc:XMLView viewName="DemoUXapp.view.MainNavigation.ListView.Scenarios.Example4-CustomList" />
              </m:Panel>
            </l:SplitPane>

            <l:SplitPane>
              <m:Panel headerText="Pending tasks" 
                height="100%">
                <mvc:XMLView viewName="DemoUXapp.view.MainNavigation.ListView.Tasks.PendingTasks.Example4-CustomList" />
              </m:Panel>
            </l:SplitPane>

          </l:PaneContainer>

          <l:PaneContainer orientation="Vertical">

            <l:SplitPane>
              <m:Panel headerText="Completed tasks" 
                height="100%">
                <mvc:XMLView viewName="DemoUXapp.view.MainNavigation.ListView.Tasks.CompletedTasks.Example4-CustomList" />
              </m:Panel>
            </l:SplitPane>

            <l:SplitPane>
              <m:Panel headerText="Managed employees" 
                height="100%">
                <mvc:XMLView viewName="DemoUXapp.view.MainNavigation.ListView.Employees.Example4-CustomList" />
              </m:Panel>
            </l:SplitPane>

          </l:PaneContainer>

        </l:PaneContainer>

      </l:ResponsiveSplitter>
    </m:content>

  </m:Page>

</mvc:View>