<mvc:View height="100%" 
    controllerName="DemoUXapp.controller.MainNavigation.ListView.Scenarios-StandardList" 
    xmlns:mvc="sap.ui.core.mvc" 
    xmlns="sap.m">

    <List headerText="Items ({=${/results}.length})" 
        items="{path:'/results', templateShareable: true}">
        <items>
            <StandardListItem icon="sap-icon://activities" 
                iconInset="false" 
                type="Navigation" 
                press="onPress"
                title="{Name}"  
                description="{Documentation}" 
                info="{Status}" 
                infoState="{StatusInfoState}" 
                highlight="{StatusInfoState}"
                tooltip="{Name} - {Documentation}">
            </StandardListItem>
        </items>
    </List>
    
</mvc:View>